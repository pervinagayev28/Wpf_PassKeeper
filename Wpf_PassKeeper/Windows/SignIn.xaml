<Window x:Class="Wpf_PassKeeper.Windows.SignIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_PassKeeper.Windows"
        mc:Ignorable="d"
        Title="SignIn" Height="700" Width="375">
    <Grid>
        <StackPanel Background="#F0F0F0" Margin="0,0,0,0">
            <Image Height="41" Width="212" Margin="0,127,0,0" Source="C:\Users\user\OneDrive\Desktop\Wpf_PassKeeper\Wpf_PassKeeper\Images\Screenshot 2023-10-11 165852.png"/>
            <TextBox Text="log in" Style="{DynamicResource SigIn_TextBox_style}" Margin="0,93,0,0"/>
            <TextBox Text="password" Style="{DynamicResource SigIn_TextBox_style}" Margin="0,15,0,0"/>
            <Button Content="Sign in" Style="{DynamicResource button_style}" Height="60" Width="260" Margin="0,30,0,0"/>
            <Button BorderThickness="0" Background="#F0F0F0" Height="14" FontSize="11" FontFamily="Josefin Sans" Width="136" Margin="0,10,0,0">
                <TextBlock Text="Forgot password? renew it!" TextDecorations="Underline" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
            <Label  Padding="0,0,0,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Height="16" Width="173" FontSize="12" BorderThickness="0,0,0,0"  Margin="0,134,0,18" Foreground="#000000" Content="a product by Product Design LLC" Background="#F0F0F0"  />
        </StackPanel>
    </Grid>
</Window>
